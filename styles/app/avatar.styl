#character
  float:none
  margin:0px auto

  td#bars
    padding-top: 10px

#bars
  .progress
    position: relative
    height: 25px
  .bar
    height: 25px
    border: 1px solid black
  .progress-text
    position: absolute
    right: 5px
    top: 3px
    color: black


// basic avatar sprite group
.avatar
    cursor: pointer
    position: relative
    width: 90px
    height: 90px

    .character-sprites
        position: absolute

    .lvl
        position: absolute
        bottom: 0px
        right: 10px

// main and party avatars
.main-avatar, .party-avatar
  margin-top: -12px

  .character-sprites
    top: -15px


.character-sprites span
    position: absolute