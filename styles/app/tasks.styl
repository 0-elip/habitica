.task-column
  padding: 1.5em
  background: #f5f5f5
  border: 1px solid #bbb
  border-radius: 0.25em
  font-family: 'Lato', sans-serif
  h2
    margin: 0 0 0.5em
    padding: 0

.task
  clear: both
  padding: 0.5em
  margin-bottom: 0.75em
  border: 1px solid rgba(0, 0, 0, 0.2)
  border-radius: 0.25em
  &:last-child
    margin-bottom: 0

.addtask-form
  margin-bottom: 0.75em
  .addtask-field
    max-width: 70%
  .addtask-btn
    float: right
    font-family: 'Lato', sans-serif

.todo-status-toggler
  margin-top: 0.75em